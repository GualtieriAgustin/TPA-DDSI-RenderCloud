<div id="panel-lateral">
    <div id="hecho-multimedia-carousel" class="carousel slide" data-bs-ride="false" style="display: none;">
        <div class="carousel-inner" id="multimedia-carousel-inner">
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#hecho-multimedia-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#hecho-multimedia-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <div class="panel-header">
        <h4 id="panel-titulo">Detalles del Hecho</h4>
    </div>
    <div class="panel-body">
        <ul class="list-group list-group-flush px-3">
            <li class="list-group-item">
                <i class="bi bi-calendar-event-fill"></i>
                <span id="panel-fecha-suceso"></span>
            </li>
            <li class="list-group-item">
                <i class="bi bi-tag-fill"></i>
                <span id="panel-categoria" class="badge bg-primary"></span>
            </li>
            <li class="list-group-item">
                <i class="bi bi-geo-alt-fill"></i>
                <span id="panel-provincia"></span>
            </li>
            <li class="list-group-item d-flex align-items-start">
                <i class="bi bi-pin-map-fill"></i>
                <div id="panel-ubicacion" class="d-flex flex-column flex-sm-row text-muted ms-2">
                    <small id="panel-latitud"></small>
                    <small id="panel-longitud" class="ms-sm-1"></small>
                </div>
            </li>
        </ul>

        <div class="mt-3 px-3">
            <h5>Descripción</h5>
            <p id="panel-descripcion"></p>
        </div>

    </div>
    <div class="panel-footer">
        <a id="sugerir-edicion-btn" href="/solicitudes/formulario" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-pencil"></i> Sugerir una edición o eliminación
        </a>
    </div>
    <div class="panel-toggle" id="panel-toggle-button">
        <i class="bi bi-chevron-left"></i>
    </div>
</div>
