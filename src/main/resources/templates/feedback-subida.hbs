{{#if (eq type "success")}}
    <div class="icon-container">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
            <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/>
            <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
        </svg>
    </div>
    <h4 class="mt-4">¡Éxito!</h4>
    <p>{{mensaje}}</p>
    <p class="text-muted mt-2"><small>Serás redirigido en unos segundos</small></p>
{{else}}
    <button type="button" class="btn-close" id="close-feedback-btn" aria-label="Close" style="position: absolute; top: 1rem; right: 1rem;"></button>
    <div class="icon-container text-danger">
        <i class="bi bi-x-circle-fill" style="font-size: 5rem;"></i>
    </div>
    <h4 class="mt-4">Error</h4>
    <p>{{mensaje}}</p>
{{/if}}